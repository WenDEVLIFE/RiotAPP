                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/cyphercard"
                    android:layout_margin="8dp"/>
            </TableRow>

            <!--sentinel button-->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center">

                <android.widget.Button
                    android:id="@+id/button7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/fragtwo_button"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/bebasneuefont"
                    android:layout_marginEnd="20dp" />

                <android.widget.Button
                    android:id="@+id/button8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/fragtwo_button"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/bebasneuefont"
                    android:layout_marginEnd="20dp"/>

                <android.widget.Button
                    android:id="@+id/button9"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/fragtwo_button"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/bebasneuefont"
                    android:layout_marginEnd="20dp"/>

            </TableRow>

            <!--controller title-->

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="10dp"
                android:gravity="right"
                android:background="@color/riotred"
                >

                <ImageView
                    android:id="@+id/controllericon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/controllericon"
                    />

                <TextView
                    android:id="@+id/smokeLBL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bebasneuefont"
                    android:text="CONTROLLER"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    />
            </TableRow>

            <!--INITIATOR-->

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/harborcard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/harborcard"
                    android:layout_margin="8dp"/>

                <ImageView
                    android:id="@+id/vipercard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/vipercard"
                    android:layout_margin="8dp"/>

                <ImageView
                    android:id="@+id/astracard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/astracard"
                    android:layout_margin="8dp"/>
            </TableRow>

            <!--initiator button-->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center">

                <android.widget.Button
                    android:id="@+id/button10"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/fragtwo_button"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/bebasneuefont"
                    android:layout_marginEnd="20dp" />

                <android.widget.Button
                    android:id="@+id/button11"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/fragtwo_button"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/bebasneuefont"
                    android:layout_marginEnd="20dp"/>

                <android.widget.Button
                    android:id="@+id/button12"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/fragtwo_button"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/bebasneuefont"
                    android:layout_marginEnd="20dp"/>
            </TableRow>

        </LinearLayout>
    </ScrollView>

</FrameLayout>