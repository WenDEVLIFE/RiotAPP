<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/saved_guides_layout"
    android:background="@drawable/riotbgwallpapervalo"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
<FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/main"
        android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_gravity="top"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="8dp">

        <ImageView
            android:id="@+id/toolbarBack"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/ic_back"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:contentDescription="Back" />

        <TextView
            android:id="@+id/toolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saved Guides"
            android:fontFamily="@font/boldonseregfont"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_centerInParent="true" />
            
    </RelativeLayout>
</LinearLayout>


        <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <ListView
    android:id="@+id/guidesListView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="8dp" />

<TextView
    android:id="@+id/emptyMessage"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="No Saved Guides"
    android:textSize="16sp"
    android:textStyle="italic"
    android:textColor="@android:color/darker_gray"
    android:gravity="center"
    android:layout_marginTop="24dp"
    android:visibility="gone" />

</LinearLayout>

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
